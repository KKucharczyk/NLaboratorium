BST::BST()
{
   root = NULL;
}

BST::node* BST::CreateLeaf(int key)
{
   node* n = new node;
   n->key = key;
   n->left = NULL;
   n->right = NULL;
   
   return n;
}

void BST::AddLeaf(int key)
{
   AddLeafPrivate(key, root);
}

