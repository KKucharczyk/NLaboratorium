#include "tablica.h"
#include "czas.h"

int main(int argc, char* argv[])
{
  string nazwa = "Dane1.txt";
  string nazwa2 = "Dane2.txt";
  
  int *Wskaznik;   // Wskaźnik na tablicę z danymi
  int *Wskaznik2;  // Wskaźnik na tablicę z danymi kontrolnymi
  
  // Algorytm
  high_resolution_clock::time_point t1;
  high_resolution_clock::time_point t2;
  
  Tablica a;
  a.Otworz_plik(nazwa);
  Wskaznik = a.Pobierz_dane();
  a.Zamknij_plik();
  
  a.Otworz_plik(nazwa2);
  Wskaznik2 = a.Pobierz_dane();
  a.Zamknij_plik();

  Wez_czas(t1);
  
  a.Pomnoz(Wskaznik);
  
  for(int i = 0; i < 100000; i++)
    cout << "*";
  
  for(int i = 0; i < a.ilosc; i++)
    if(Wskaznik[i] != Wskaznik2[i])
      cerr << "Blad: Pliki nie maja tej samej zawartosci." << endl;
 
  Wez_czas(t2);
  Opracuj_czas(t1, t2);
    
}