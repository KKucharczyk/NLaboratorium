#ifndef STOS_H
#define STOS_H

#include <iostream>
using namespace std;

class Stos
{
public:
  int *Tablica;
  int ilosc_elementow;
  int wielkosc_tablicy;
  
  // Konstruktory
  Stos(int wielkosc) {Tablica = new int[wielkosc]; ilosc_elementow = 0; wielkosc_tablicy = 0;}
  
  // Metody
  void push(int Nowy);
  void pop();
  bool isEmpty();
  int size();
  
  void Show();
};


#endif