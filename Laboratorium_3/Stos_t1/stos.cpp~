#include "stos.h"

void Stos::push(int Nowy)
{
  ilosc_elementow++;
  if(ilosc_elementow < wielkosc_tablicy) 
    Tablica[ilosc_elementow] = Nowy;
  
  else
  {
    int nowa_ilosc = ilosc_elementow++;
    int *Wskaznik = new int[nowa_ilosc];
    for(int i = 0; i < ilosc_elementow; i++)
      Wskaznik[i] = Tablica[i];
    
    Wskaznik[nowa_ilosc-1] = Nowy;
    delete Tablica;
    ilosc_elementow = nowa_ilosc;
    Tablica = Wskaznik;
  }
  
}

void Stos::pop()
{
  int nowa_ilosc = ilosc_elementow-1;
  int *Wskaznik = new int[nowa_ilosc];

  for(int i = 0; i < nowa_ilosc; i++)
    Wskaznik[i] = Tablica[i];
  
  delete Tablica;
  Tablica = Wskaznik;
  ilosc_elementow = nowa_ilosc;
}

bool Stos::isEmpty()
{
  if(ilosc_elementow != 0)
    return true;
  return false;
}

void Stos::Show()
{
  for(int i = 0; i<ilosc_elementow; i++)
    cout << Tablica[i] << endl;
}

int Stos::size()
{
  return ilosc_elementow;
}
