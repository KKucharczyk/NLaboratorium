#include "stos.h"

void Stos::push(int Nowy)
{
  Element *wsk; 
  
  if(ilosc_elementow==0)
  {
    wsk = new Element(NULL, Nowy);
    head = wsk;
   
  }
 
  else
  {
    wsk = new Element(head, Nowy);
    head = wsk;
  }
  
   ilosc_elementow+=1;
  
}
