#include "tablica.h"
#include <sys/time.h>
#include <sstream>

int main(int argc, char* argv[])
{
  string nazwa  = "Dane1.txt"; // Plik z danymi
  string nazwa2 = "Dane2.txt"; // Plik z danymi kontrolnymi
  
  int *Wskaznik;   // Wskaźnik na tablicę z danymi
  int *Wskaznik2;  // Wskaźnik na tablicę z danymi kontrolnymi
  
  // Algorytm
  
  Tablica a;
  a.Otworz_plik(nazwa);
  Wskaznik = a.Pobierz_dane();
  a.Zamknij_plik();
  
  a.Otworz_plik(nazwa2);
  Wskaznik2 = a.Pobierz_dane();
  a.Zamknij_plik();
  
  a.Wypisz(Wskaznik, a.dlugosc());
  a.Zamien_elementy(Wskaznik, 1,8);
  a.Wypisz(Wskaznik, a.dlugosc());
  a.Odwroc_kolejnosc(Wskaznik);
  a.Wypisz(Wskaznik, a.dlugosc());
  Wskaznik = a.Dodaj_element(Wskaznik,15);
  
  a.Wypisz(Wskaznik, a.dlugosc());
  Wskaznik = a.Dodaj_elementy(Wskaznik, Wskaznik2);
  a.Wypisz2(Wskaznik);
 
}